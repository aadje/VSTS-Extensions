{
    "manifestVersion": 1,
    "id": "kudu-zipdeploy",
    "version": "2.0.0",
    "name": "Kudu ZipDeploy",
    "publisher": "arjanvanrijn",
    "public": true,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Deploy a Zip package to the Azure App Service using the Kudu zipdeploy api",
    "icons": {
        "default": "marketplace/icon.png"
    },
    "files": [
        {
            "path": "buildtask"
        }
    ],
    "categories": [
        "Build and release"
    ],
    "tags": [
        "webapp",
        "website",
        "appservice",
        "azure",
        "kudu"
    ],
    "screenshots": [
        {
            "path": "marketplace/screenshot2.png"
        },
        {
            "path": "marketplace/screenshot1.png"
        }
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license-terms.md"
        }
    },
    "links": {
        "home": {
            "uri": "https://github.com/aadje/VSTS-Extensions"
        },
        "getstarted": {
            "uri": "https://github.com/aadje/VSTS-Extensions"
        },
        "learn": {
            "uri": "https://github.com/aadje/VSTS-Extensions"
        },
        "support": {
            "uri": "https://github.com/aadje/VSTS-Extensions/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/aadje/VSTS-Extensions"
    },    
    "contributions": [
        {
            "id": "custom-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildtask"
            }
        }
    ]
}
