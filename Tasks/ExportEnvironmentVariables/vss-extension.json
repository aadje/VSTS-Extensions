{
    "manifestVersion": 1,
    "id": "export-environment-variables",
    "version": "1.0.0",
    "name": "Export Environment Variables",
    "publisher": "arjanvanrijn",
    "public": false,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Export the Source version and other Build information to a json file using the envrionment variables.",
    "icons": {
        "default": "marketplace/icon.png"
    },
    "files": [
        {
            "path": "buildtask"
        }
    ],
    "categories": [
        "Build and release"
    ],
    "tags": [
        "environment variables",
        "versioning"
    ],
    "screenshots": [
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license-terms.md"
        }
    },
    "links": {
        "home": {
            "uri": "https://github.com/aadje/VSTS-Extensions"
        },
        "getstarted": {
            "uri": "https://github.com/aadje/VSTS-Extensions"
        },
        "learn": {
            "uri": "https://github.com/aadje/VSTS-Extensions"
        },
        "support": {
            "uri": "https://github.com/aadje/VSTS-Extensions/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/aadje/VSTS-Extensions"
    },    
    "contributions": [
        {
            "id": "custom-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildtask"
            }
        }
    ]
}
